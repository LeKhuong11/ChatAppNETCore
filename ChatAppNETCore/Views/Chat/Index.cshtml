                background-color: #e9ecef;
            }

            .user-group-list .user .info {
                display: flex;
                align-items: center;
                border-bottom: 1px solid #ccc;
                padding: 8px 0;
            }

            .user-group-list .user img {
                border-radius: 50%;
            }


    .create-group-model {
        position: fixed;
        top: 50%;
