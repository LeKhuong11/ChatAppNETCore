@using System.Security.Claims
@using ChatAppNETCore.ViewModels

@{
    ViewData["Title"] = "Chat screen";
    var chats = ViewBag.Chats as List<ChatListViewModel>;
    var users = ViewBag.Users as List<C_User>;

    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier).ToUpper();
}

@if (@TempData["SuccessMessage"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["SuccessMessage"]')
    </script>
}

<div class="chat-container">
    <div class="chat-list">
        <h3>Chat List</h3>
        @if (chats.Any())
        {
            <div class="create-chat">
                <p>New chat </p>
                <div class="d-flex">
                    <div class="px-2 cursor-pointer" title="New chat" onclick="openSelectUser()">
                        <i class="fa-solid fa-user-plus"></i>
                    </div>
                    <div class="px-2 cursor-pointer" title="New group">
                        <i class="fa-solid fa-users"></i>
                    </div>
                </div>
            </div>
            <ul>
                @foreach (var chat in chats)
                {
                    <li class="chat-user" id="@chat.Partner.Id" onclick="openChatRoom('@chat.Id', '@chat.Partner.Name', '@currentUserId')" is-open="false">
                        <div class="info">
                            <div class="position-relative">
                                <img width="50" height="50" src="/images/avatar-default.jpg" alt="Avatar default" />
                                <div class="user-online"></div>
                            </div>
                            <p class="px-2">@chat.Partner.Name</p>
                        </div>
                        <div class="dot-red"></div>
                    </li>
                }
            </ul>
        } else {
            <div class="mt-4">
                <p class="label text-center">There have been no conversations yet</p>

                <div class="d-flex justify-content-center mt-3">
                    <div class="px-2 cursor-pointer" title="New chat" onclick="openSelectUser()">
                        <i class="fa-solid fa-user-plus fs-5"></i>
                    </div>
                    <div class="px-2 cursor-pointer" title="New group">
                        <i class="fa-solid fa-users fs-5"></i>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="chat-room">
        <h3 class="chat-with">Chat Room</h3>
        <div id="chat-content">
            
        </div>
        <div class="chat-input"></div>
        <input type="button" hidden id="sendButton" value="Send Message" />
    </div>

    
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header border-0">
                <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <rect width="100%" height="100%" fill="#007aff"></rect>
                </svg>
                <strong class="me-auto text-black" id="messageFrom"></strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-white" id="toastMessageContent"></div>
        </div>
    </div>
</div>


<div class="user-list">
    <div style="box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;">
        <h2 class="text-center py-2">Users</h2>
   </div>
    <div class="list">
        @foreach (var user in users)
        {
            <div class="user">
                <div class="info">
                    <div class="position-relative">
                        <img width="50" height="50" src="/images/avatar-default.jpg" alt="Avatar default" />
                        <div class="user-online"></div>
                    </div>
                    <p class="px-2">@user.Name</p>
                </div>
            </div>
        }
    </div>
</div>

<div id="overlay" onclick="offOverlay()"></div>


<script>
    var currentUserId = '@currentUserId';
    const userList = document.querySelector('.user-list');

    function openSelectUser() {

        userList.style.right = '0';
        userList.style.opacity = '1';
        onOverlay();
    }

    function onOverlay() {
        document.getElementById("overlay").style.display = "block";
    }

    function offOverlay() {
        document.getElementById("overlay").style.display = "none";
        userList.style.right = '-400px';
        userList.style.opacity = '0';
    }
</script>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

<style>
    #overlay {
        position: fixed; 
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.4);
        z-index: 2;
        cursor: pointer;
    }

    .create-chat {
        margin-bottom: 10px;
    }

    .create-chat p {
        font-size: 12px;
    }

    .user-list {
        position: fixed;
        top: 0;
        right: -400px;
        bottom: 0;
        width: 400px;
        background: #f5f5f5;
        border-left: 2px solid #77CDFF;
        z-index: 3;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
        opacity: 0;
        
        transition: right .3s ease-in-out, opacity .2s ease-in-out;
    }

        .list {
            overflow-y: auto;
        }

            .user-list .user {
                padding: 0 10px;
                cursor: pointer;
            }

            .user-list .user:hover {
                background-color: #e9ecef;
            }

                .user-list .user .info {
                    display: flex;
                    align-items: center;
                    border-bottom: 1px solid #ccc;
                    padding: 8px 0;
                }

                    .user-list .user img {
                        border-radius: 50%;
                    }


    p {
        margin-bottom: 0;
    }

    .cursor-pointer {
        cursor: pointer;
    }


</style>

